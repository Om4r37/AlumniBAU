{% extends "layout/layout.jinja" %}
{% from "utils/form.jinja" import render_form %}
{% set highlight_tab = "survey" %}
{% set title = "Survey" %}
{% block main %} 
<link href="/static/styles/alumni/survey.css" rel="stylesheet">
<div id="survey">
    <h1>Survey</h1>
{% for form in forms %}
    <details {% if form.is_completed %}class="completed"{% else %}open{% endif %}>
        <summary><span>{{ form.form_title }}</span></summary>
        {{ render_form(form) }}
    </details>
{% endfor %}
</div>
<script src="/static/scripts/survey.js"></script>
{% endblock %}