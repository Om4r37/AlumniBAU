{% extends "layout/layout.jinja" %}
{% set highlight_tab = "news" %}
{% set title = "Alumni News" %}
{% block main %}
<link rel="stylesheet" href="/static/styles/alumni/posts.css">
<div class="container">
    <div></div>
    <h2>News</h2>
    <div>{% block announce %}{% endblock %}</div>
</div>
{% if posts %}
{% for post in posts %}
<a id="_{{post.id}}" class="post" href="/post?id={{post.id}}">
    <h2>{{post.title}}</h2>
    <img src="data:image/png;base64,{{post.thumbnail|encode}}">
</a>
{% endfor %}
{% else %}
<p id="message">There are no announcements yet.</p>
{% endif %}
{% endblock %}