        type: 'pie',
        data: {
            labels: [{% for status in work_status %}"{{status|title}}", {% endfor %}],
            datasets: [{
                data: [
                    {% for status in work_status %}
                        {{stats[status + "_count"]}},
                    {% endfor %}
                ],
                backgroundColor: ["#36A2EB", "#FF6384", "#aaaaaa"],
            }]
        },
    options: {
        responsive: true,
            plugins: {
            title: {
                display: true,
                text: 'Work Status',
                font: {
                    size: 18
                }
            },
            legend: {
                labels: {
                    font: {
                        size: 14
                    }
                }
            }
        }
    }
    });
    {% set degrees = ["bachelor", "master_thesis", "master_comprehensive"]%}
