                    {% endfor %}
                ],
                backgroundColor: ["#FF6384", "#36A2EB", "#FFCE56"],
            }]
        },
    options: {
        responsive: true,
            plugins: {
            title: {
                display: true,
                text: 'Degrees Distribution',
                font: {
                    size: 18
                }
            },
            legend: {
                labels: {
                    font: {
                        size: 14
                    }
                }
            }
        }
    }
    });
    {% set martial_status = ["married", "single", "divorced", "widowed"]%}
    var martialStatusChart = new Chart(document.getElementById("martial_status"), {
        type: 'pie',
        data: {
            labels: [{% for status in martial_status %}"{{status|title}}", {% endfor %}],
            datasets: [{
                data: [
                    {% for status in martial_status %}
                        {{stats[status + "_count"]}},
                    {% endfor %}
                ],
                backgroundColor: ["#FF6384", "#36A2EB", "#FFCE56", "#4bc0c0"],
            }]
        },
    options: {
        responsive: true,
            plugins: {
            title: {
                display: true,
                text: 'Martial Status',
                font: {
                    size: 18
                }
            },
            legend: {
                labels: {
                    font: {
                        size: 14
                    }
                }
            }
        }
    }
    });
    {% set postgrad = ["postgrad", "no_postgrad", "postgrad_unspecified"]%}
    var postgradChart = new Chart(document.getElementById("postgrad"), {
        type: 'pie',
        data: {
            labels: [{% for status in postgrad %}"{{status|title}}", {% endfor %}],
            datasets: [{
                data: [
                    {% for status in postgrad %}
                        {{stats[status + "_count"]}},
                    {% endfor %}
                ],
                backgroundColor: ["#36A2EB", "#FF6384", "#aaaaaa"],
            }]
        },
    options: {
        responsive: true,
            plugins: {
            title: {
                display: true,
                text: 'Postgraduate Studies',
                font: {
                    size: 18
                }
            },
            legend: {
                labels: {
                    font: {
                        size: 14
                    }
                }
            }
        }
    }
    });
    var sectorChart = new Chart(document.getElementById("sector"), {
        type: 'doughnut',
        data: {
            labels: ["Public", "Private"],
            datasets: [{
                data: [{{ stats.public_sector_count }}, {{ stats.private_sector_count }}],
                backgroundColor: ["#36A2EB", "#FF6384"],
            }]
        },
        options: {
            responsive: true,
            cutout: "80%",
            plugins: {
                title: {
                    display: true,
                    text: 'Work Sector',
                    font: {
                        size: 18
                    }
                }
            }
        }
    });
</script>
{% endblock %}